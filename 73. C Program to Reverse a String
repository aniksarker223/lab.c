#include <stdio.h>

int main() {
    char s[100], rev[100];
    int i, len = 0;

    printf("Enter a string: ");
    gets(s);

    while (s[len] != '\0')
        len++;

    for (i = 0; i < len; i++)
        rev[i] = s[len - 1 - i];

    rev[len] = '\0';

    printf("Reversed = %s\n", rev);

    return 0;
}
