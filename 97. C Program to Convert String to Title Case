#include <stdio.h>

int main() {
    char s[200];
    int i;

    printf("Enter sentence: ");
    gets(s);

    if(s[0]>='a' && s[0]<='z')
        s[0] -= 32;

    for(i=1; s[i]; i++){
        if(s[i-1]==' ' && s[i]>='a' && s[i]<='z')
            s[i] -= 32;
    }

    printf("Title Case: %s\n", s);

    return 0;
}
