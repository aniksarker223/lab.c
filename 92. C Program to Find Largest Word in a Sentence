#include <stdio.h>
#include <string.h>

int main() {
    char s[200], word[50], largest[50];
    int i=0, j=0, maxLen=0;

    printf("Enter sentence: ");
    gets(s);

    while(1){
        if(s[i]==' ' || s[i]=='\0'){
            word[j]='\0';
            if(strlen(word) > maxLen){
                maxLen = strlen(word);
                strcpy(largest, word);
            }
            j=0;
            if(s[i]=='\0') break;
        } else {
            word[j++] = s[i];
        }
        i++;
    }

    printf("Largest word = %s\n", largest);

    return 0;
}
